---
import ContentSubPageLayout from "../../layouts/ContentSubPageLayout.astro";
const pageTitle = "Articles";
---

<ContentSubPageLayout pageTitle={pageTitle} bgImage="bg-academy">
  <p>
    <a href="https://www.bkgm.com/articles/index.html"
      >Backgammon galore articles</a
    >
  </p>
  <p>
    <a
      href="https://drive.google.com/drive/u/1/folders/1khJ7BaTkCUXBcMWfPdtCWZrCnIHXKEpx"
      >Other articles</a
    >
  </p>
</ContentSubPageLayout>

<style>
  h2 {
    text-align: center;
    margin-bottom: 1rem;
  }

  blockquote {
    margin-left: 3rem;
    margin-right: 3rem;
    font-style: italic;
  }

  .img-container {
    text-align: center;
    margin: 1rem;
  }

  a {
    text-decoration: underline;
  }

  img {
    max-width: 100%;
    max-height: 20rem;
  }

  p {
    padding-bottom: 1rem;
  }

  ol {
    padding-bottom: 1rem;
  }

  ol > li {
    list-style: decimal;
  }
</style>
