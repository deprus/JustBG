---
import ContentMainPageLayout from "../layouts/ContentMainPageLayout.astro";
const pageTitle = "Where to play";
const description =
  "In recent decades, the opportunities for playing backgammon have changed significantly. Now, you can play not only in person but also online. Moreover, this method of playing is becoming more and more popular. It is no longer a problem to find a partner for backgammon at any time of day or night.";
---

<ContentMainPageLayout
  pageTitle={pageTitle}
  bgImage="bg-whereToPlay"
  description={description}
>
  <div class="main-section-lists-container">
    <div class="main-section-doublelist-container">
      <h2>Live</h2>
      <ul class="main-section-list">
        <a href="academy/articles">
          <li>Tournament overviews</li>
        </a>
        <a href="academy/books">
          <li>World championships</li>
        </a>
        <a href="academy/videos">
          <li>Series</li>
        </a>
      </ul>
    </div>
    <div class="main-section-doublelist-container">
      <h2>Online</h2>
      <ul class="main-section-list">
        <a href="academy/articles">
          <li>Overview</li>
        </a>
        <a href="academy/books">
          <li>WBIF</li>
        </a>
        <a href="academy/videos">
          <li>Rooms</li>
        </a>
      </ul>
    </div>
  </div>
  <div class="main-section-img-container">
    <img
      src="online.jpg"
      alt="girl playing backgammon"
      class="main-section-img"
    />
  </div>
</ContentMainPageLayout>

<style>
  ul {
    padding-left: 2rem;
    padding-right: 2rem;
    padding-bottom: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    color: whitesmoke;
    text-decoration: underline;
    font-size: 2.5rem;
  }

  .main-section-lists-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5rem;
    margin-top: 2rem;
  }

  h2 {
    font-size: 3rem;
    border-top: solid whitesmoke;
    border-bottom: solid whitesmoke;
  }

  .main-section-doublelist-container {
    display: flex;
    gap: 1rem;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: whitesmoke;
  }

  .main-section-img-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  .main-section-img {
    max-width: 95%;
    max-height: 320px;
    height: auto;
  }
</style>
