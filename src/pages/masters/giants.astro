  }

  .img-container {
    text-align: center;
    margin: 1rem;
  }

  a {
    text-decoration: underline;
  }

  img {
    max-width: 100%;
    max-height: 20rem;
  }

  p {
    padding-bottom: 1rem;
  }

  ol {
    padding-bottom: 1rem;
  }

  ol > li {
    list-style: decimal;
  }

  img {
    max-width: 100%;
    max-height: 20rem;
  }

  figure {
    text-align: center;
    margin: 1rem;
    font-size: 2rem;
    font-style: italic;
  }
</style>
