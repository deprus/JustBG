---
import Navigation from "./Navigation.astro";
import HeaderSlogan from "./HeaderSlogan.astro";
const { animation } = Astro.props;
---

<header>
  <Navigation isNavTransparent="transparent" animation={animation} />
  <HeaderSlogan animation={animation} />
</header>

<style>
  header {
    background-image: linear-gradient(
        rgba(27, 69, 113, 0.8),
        rgba(191, 32, 81, 0.5)
      ),
      url("/istavder.jpg");
    height: 100svh;
    background-size: cover;
    background-position: center;
    display: flex;
    flex-direction: column;
    color: white;
  }
</style>
