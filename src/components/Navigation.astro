---
import Logo from "./Logo.astro";
import Hamburger from "./Hamburger.astro";
import MobileNavigation from "./MobileNavigation.astro";
const { navTransparency, animation } = Astro.props;
---

<nav class={`header-nav ${navTransparency} ${animation}`}>
  <div class="header-nav-container">
    <Logo />
    <div class="header-nav-menu">
      <a href="/" class="header-nav-link">Home</a>
      <a href="/basics" class="header-nav-link">Basics</a>
      <a href="/academy" class="header-nav-link">Academy</a>
      <a href="/masters" class="header-nav-link">Masters</a>
      <a href="/where-to-play" class="header-nav-link">Where to play</a>
      <a href="/about-us" class="header-nav-link">About us</a>
    </div>
    <Hamburger animation={animation} />
    <MobileNavigation animation={animation} />
  </div>
</nav>

<style>
  .header-nav {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 100;
    color: white;
  }

  .header-nav-container {
    max-width: 80rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 0 auto;
    padding: 0.5rem 1rem;
  }

  .header-nav-menu {
    display: none;
  }

  .header-nav-link {
    font-size: 1.6rem;
    line-height: 1.5rem;
  }

  .header-nav-link:hover {
    text-decoration: underline;
  }

  .not-transparent {
    background-color: rgba(34, 77, 106, 0.95);
  }

  @media (min-width: 1024px) {
    .header-nav-menu {
      display: flex;
      column-gap: 2rem;
    }
  }
  @media (min-width: 1024px) {
    .header-nav {
      padding-right: 2rem;
      padding-left: 2rem;
    }
  }
</style>
