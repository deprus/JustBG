---
import BaseContentPageLayout from "./BaseContentPageLayout.astro";
const { pageTitle, bgImage, description } = Astro.props;
---

<BaseContentPageLayout pageTitle={pageTitle} bgImage={bgImage}>
  <section class="main-section-description">{description}</section>
  <section class="main-section-content">
    <slot />
  </section>
</BaseContentPageLayout>

<style>
  .main-section-description {
    padding: 3rem 3rem;
    color: rgba(33, 33, 33);
    font-size: 1.3rem;
  }

  .main-section-content {
    background-color: rgb(32, 38, 53);
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 1024px) {
    .main-section-content {
      flex-direction: row;
      justify-content: center;
      gap: 8rem;
      padding-left: 2rem;
    }
  }
</style>
